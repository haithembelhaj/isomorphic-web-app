#!/usr/bin/env node

const config = require('../lib/config');
const bs = require('browser-sync').create();

bs.init({
  files: [config.destPath + '/scripts/*.js', config.destPath + '/styles/*.css'],
  serveStatic: [config.destPath],
  proxy: 'localhost:3000',
  notify: false,
  ghostMode: {
      clicks: false,
      forms: false,
      scroll: false
  }
});

