{
  "name": "web-app",
  "version": "1.0.0",
  "description": "A NodeJS Express React isomorphic Web App boilerplate",
  "main": "index.js",
  "scripts": {
    "browserSync": "./scripts/browserSync",
    "watch": "./scripts/watch",
    "test": "mocha",
    "start": "./node_modules/pm2/bin/pm2 reload app.json",
    "assets:copy": "cp -R ./app/assets ./public",
    "assets:images": "./scripts/images",
    "assets:compile": "./scripts/compile --production --scripts --styles",
    "render": "BABEL_DISABLE_CACHE=1 ./scripts/render --view index",
    "lighthouse": "lighthouse http://localhost:3000",
    "compile": "npm run assets:copy && npm run assets:images && npm run assets:compile",
    "dev": "npm run compile && npm run start & npm run watch & npm run browserSync"
  },
  "author": "Haithem Bel Haj <haythem.belhaj@gmail.com> (http://haithembelhaj.github.io)",
  "license": "ISC",
  "devDependencies": {
    "mocha": "^3.2.0"
  },
  "dependencies": {
    "autoprefixer": "^6.6.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.18.0",
    "bluebird": "^3.4.7",
    "bluebird-queue": "0.0.8",
    "body-parser": "^1.15.2",
    "browser-sync": "^2.18.6",
    "chokidar": "^1.6.1",
    "classnames": "^2.2.5",
    "compass-importer": "^0.2.4",
    "compression": "^1.6.2",
    "connect-ensure-login": "^0.1.1",
    "cookie-parser": "^1.4.3",
    "cssnano": "^3.10.0",
    "csurf": "^1.9.0",
    "debug": "^2.6.0",
    "dependency-tree": "^5.7.5",
    "es6-promise": "^3.2.1",
    "eslint": "^3.13.1",
    "eslint-plugin-react": "^6.9.0",
    "express": "^4.14.0",
    "glob": "^7.1.1",
    "helmet": "^3.2.0",
    "imagemin": "^5.2.2",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^5.0.0",
    "lighthouse": "^1.5.1",
    "lodash": "^4.13.1",
    "marked": "^0.3.6",
    "mkdirp": "^0.5.1",
    "moment": "^2.17.1",
    "nedb": "^1.8.0",
    "node-sass": "^4.1.1",
    "normalize-scss": "^6.0.0",
    "optimist": "^0.6.1",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pm2": "^2.2.3",
    "postcss": "^5.2.8",
    "pretty-error": "^2.0.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.1",
    "request": "^2.79.0",
    "sass-inline-svg": "0.0.3",
    "sharp": "^0.17.2",
    "webpack": "^1.14.0",
    "wolfy87-eventemitter": "^5.1.0"
  }
}
